{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "target": "es6",
    "paths": {
      "~/*": ["./*"]
    },
    "declaration": true,
    "strict": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}